{
	"rules": {
		"@typescript-eslint/indent": "off",
		"no-mixed-spaces-and-tabs": "off",
		"n/file-extension-in-import": [
			"error",
			"always",
			{
				".ts": "always"
			}
		],
		"import/order": [
			"error",
			{
				"newlines-between": "always",
				"warnOnUnassignedImports": true
			}
		],
		"@typescript-eslint/quotes": [
			"error",
			"single",
			{
				"avoidEscape": true
			}
		]
	}
}
